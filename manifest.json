{
    "manifest_version": 3, 
    "name": "Color Finder",
    "description": "HEX Color picker",
    "version": "1.0.0",
    "icons" : {
        "16":"icons/ui-design-16x16-9204842.png",
        "32":"icons/ui-design-32x32-9204842.png",
        "48":"icons/ui-design-48x48-9204842.png",
        "128":"icons/ui-design-128x128-9204842.png"
    },
    "action": {
        "default_popup": "popup/popup.html"
    },
    "permissions":[],
    "background": {
        "service_worker": "background/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "js": ["content/content.js"],
            "css": ["content/content.css"],
            "matches":["<all_urls>"]
        }
    ]
}