{
    "manifest_version": 3, 
    "name": "heliomnet",
    "description": "Build an Extension!",
    "version": "1.0.0",
    "icons" : {
        "16":"icons/sale-16x16-8585356.png",
        "32":"icons/sale-32x32-8585356.png",
        "48":"icons/sale-48x48-8585356.png",
        "128":"icons/sale-128x128-8585356.png"
    },
    "action": {
        "default_popup": "popup/popup.html"
    },
    "permissions":["tabs"],
    "background": {
        "service_worker": "/background/background.js"
    },
    "content_scripts": [
        {
            "js": ["content/content.js"],
            "css": ["content/content.css"],
            "matches":["<all_urls>"]
        }
    ]
}